extends layout

block content

  h1= title
  p Welcome to #{title}

  ul
    li My Text
    li Next line

  span#draggable Drag Me

  br

  - var test= 1
  input(type='text').class-name#anyid

  p#ausgabe #{test}

  div
    table
      tbody
        tr
          td
            each picture in pictures
              -var pfad = '../routes/verzeichnis/'+path+'/samples/'+picture
              td
                div
                  p(align= 'center') #{picture}
        tr
          td
            each picture in pictures
              -var pfad = '../routes/verzeichnis/'+path+'/samples/'+picture
              td
                div.picture
                  img(src='' + pfad, width= 100, alt= picture)


  style.
    .crosshair{
      height: 400px;
      width: 700px;
      clear: both;
      cursor: crosshair;
      background: #ff00ab;
      z-index: 11;
    }

  - var boxes=0
  - var laeufer=0
  if pictures.length >= 4
    - var boxes= 4
  else
    - var boxes=pictures.length

  p#boxes #{boxes}

  div.crosshair#crosshair()
    - for(var laeufer=0;laeufer<boxes;laeufer++)
        if(laeufer===boxes-1)
            div.crosshair(style='z-index: 0; position:absolute;background-image: url("/routes/verzeichnis/'+path+'/samples/'+pictures[laeufer]+'");')
        else
            div(id=compareBoxes[laeufer], style='z-index:' +(10-laeufer).toString()+'; position: absolute;overflow: hidden;border: 1px solid white;width: 700px;height: 400px;background-image: url("/routes/verzeichnis/'+path+'/samples/'+pictures[laeufer]+'");')

